<div class = "container">

  <h4>ショッピングカート</h4>

  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？",  class: "btn btn-danger" %>

  <% tax = 1.1 %>
  <% sum = 0 %>


  <table class = "table table-bordered">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>


    <% @cart_items.each do |cart_item| %>

      <tr>
        <td><%= cart_item.item.name %></td>
          <% include_tax = cart_item.item.price * tax %>
        <td><%= include_tax.floor.to_s(:delimited) %></td>

        <%= form_with model:cart_item, url: cart_item_path(cart_item), local:true do |f| %>
          <td>
            <%= f.select :amount, *[1..5]  %>
            <%= f.submit "変更", class: "btn btn-success" %>
          </td>
        <% end %>

            <% item_sum = include_tax * cart_item.amount %>
            <% sum = sum + item_sum %>
        <td><%= item_sum.floor.to_s(:delimited) %></td>
        <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>

    合計金額
    <%= sum.floor.to_s(:delimited) %>


  <% if @cart_items.present? %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  <% else %>
      <%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success" %>
  <% end %>

</div>