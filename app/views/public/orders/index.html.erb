
<div class = "container">

  <h4>注文履歴一覧</h4>

  <table class = "table">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>


    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        <%= order.postal_code %>
        <%= order.address %>
        <%= order.name %>
      </td>
    </tr>
      <% order_items = OrderItem.where(order_id: :id) %>

      <td>
        <% order_items.each do |order_item| %>
          <%= order_item.amount %>
        <% end %>
      </td>
    <% end %>
  </table>

</div>