<div class = "container">
  <h4>注文情報入力</h4>

  <%= form_with model:@order, url: confirm_orders_path, local:true do |f| %>

  <div class = "row">
    <p class = "font-weight-bold">支払方法</p>

      <div class = "field">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:card] %>
      </div>

      <div class = "field">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:bank] %>
      </div>
  </div>

  <div class = "row">
    <div class = "field">
      <div class = "font-weight-bold">お届け先</div>
        <%= f.radio_button :select_address, 0 %>
        ご自身の住所
    </div>

    <div class = "field">
      <%= f.radio_button :select_address, 1 %>
      登録済み住所から選択

      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
    </div>


    <div class = "field">
      <%= f.radio_button :select_address, 2 %>
      新しいお届け先

      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>

      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>

      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>

    </div>
  </div>

   <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  <% end %>

</div>