<div class = "container">
  <div class = "row mb-5">
    <h4 class = "font-weight-bold">会員情報編集</h4>
  </div>


  <%= form_with model:@customer, url:customers_path(@customer), local:true do |f| %>

    <div class = "row mb-3">
      <div class = "col-2">氏名</div>
      <div class = "col-3"><%= f.text_field :last_name %></div>
      <div class = "col-3"><%= f.text_field :first_name %></div>
    </div>

    <div class = "row mb-3">
      <div class = "col-md-2">フリガナ</div>
      <div class = "col-md-3"><%= f.text_field :last_name_kana %></div>
      <div class = "col-md-3"><%= f.text_field :first_name_kana %></div>
    </div>

    <div class = "row mb-3">
      <div class = "col-md-2"><%= f.label :postal_code, value: "郵便番号" %></div>
      <div class = "col-md-3"><%= f.text_field :postal_code %></div>
    </div>

    <div class = "row mb-3">
      <div class = "col-md-2"><%= f.label :registered_address, value: "住所" %></div>
      <div class = "col-md-3"><%= f.text_field :registered_address, :size=>"70" %></div>
    </div>

    <div class = "row mb-3">
      <div class = "col-md-2"><%= f.label :telephone_number, value: "電話番号" %></div>
      <div class = "col-md-3"><%= f.text_field :telephone_number %></div>
    </div>

    <div class = "row mb-3">
      <div class = "col-md-2"><%= f.label :email, value: "メールアドレス" %></div>
      <div class = "col-md-3"><%= f.email_field :email %></div>
    </div>


    <div class = "row mb-3">
      <div class = "col-md-3 offset-md-2"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
      <div class = "col-md-3 offset-md-3"><%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %></div>
    </div>
  <% end %>

</div>