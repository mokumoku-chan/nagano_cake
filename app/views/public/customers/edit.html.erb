<div class = "container">
  <div class = "row">
    <h4>会員情報編集</h4>
  </div>


  <%= form_with model:@customer, url:customers_path(@customer), local:true do |f| %>

    <div class = "row">
      <div class = "col-3">氏名</div>
      <div class = "col-3"><%= f.text_field :last_name %></div>
      <div class = "col-3"><%= f.text_field :first_name %></div>

    </div>
    フリガナ
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>

    郵便番号
    <%= f.text_field :postal_code %>

    住所
    <%= f.text_field :address %>

    電話番号
    <%= f.text_field :telephone_number %>

    メールアドレス
    <%= f.email_field :email %>


    <%= f.submit "編集内容を保存", class: "btn btn-success" %>

  <% end %>

  <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %>

</div>