<div class = "container">

    <div class = "row">
        <h4 class = "font-weight-bold">マイページ</h4>
    </div>

    <div class = "row my-4">
        <p class = "font-weight-bold">登録情報</p>

        <%= link_to "編集する", edit_customers_path, class: "btn btn-success mx-4" %>
    </div>


    <div class = "row">
        <table class = "table table-bordered mx-auto">
            <tr>
                <th class = "table-active">氏名</th>
                <td><%= @customer.last_name %> &nbsp; <%= @customer.first_name %></td>
            </tr>

            <tr>
                <th class = "table-active">カナ</th>
                <td><%= @customer.last_name_kana %> &nbsp; <%= @customer.first_name_kana %></td>
            </tr>

            <tr>
                <th class = "table-active">郵便番号</th>
                <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
                <th class = "table-active">住所</th>
                <td><%= @customer.registered_address %></td>
            </tr>

            <tr>
                <th class = "table-active">電話番号</th>
                <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
                <th class = "table-active">メールアドレス</th>
                <td><%= @customer.email %></td>
            </tr>

        </table>

    </div>

    <div class = "row my-3">
        <div class = "col-md-2"><p class = "font-weight-bold">配送先</p></div>
        <div class = "col">
            <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary mx-5" %>
        </div>
    </div>

    <div class = "row">
        <div class = "col-md-2"><p class = "font-weight-bold">注文履歴</p></div>
        <div class = "col">
            <%= link_to "一覧を見る", orders_path, class: "btn btn-primary mx-5" %>
        </div>
    </div>

</div>