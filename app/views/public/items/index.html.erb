<div class = "container">

  <div class = "row">

    <div class = "col-2">
      <table class = "table table-borderless border my-4">
        <tr>
          <th class = "border text-center"><strong>ジャンル検索</strong></th>
        </tr>

        <% @genre.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>

      </table>
    </div>

    <% tax = 1.1 %>

    <div class = "col-10">
      <h4 class = "my-4">商品一覧 (全<%= @items.count %>件)</h4>

      <div class = "row">

        <% @items.each do |item| %>
          <div class = "col-sm-4 col-md-3 my-3">
            <div class = "row"><%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %></div>
            <div class = "row my-4"><%= link_to item.name, item_path(item), class: "text-dark" %></div>

            <% include_tax = item.price * tax %>
            <div class = "row">￥<%= include_tax.floor.to_s(:delimited)%></div>
          </div>
        <% end %>
      </div>

      <%= paginate @items %>
    </div>

  </div>
</div>