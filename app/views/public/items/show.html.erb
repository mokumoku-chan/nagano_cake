<div class = "container">
  <% tax = 1.1 %>


  <div class = "row">

    <div class = "col-md-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    </div>

    <div class = "col-md-8 offset-md-1">


      <h4 class = "my-2"><strong><%= @item.name %></strong></h4>

      <p><%= @item.introduction %></p>

      <% include_tax = @item.price * tax %>
      <p class = "my-3"><strong>￥<%= include_tax.floor.to_s(:delimited)%>　(税込)</strong></p>

      <%= form_with model:@item, url: cart_items_path, local:true do |f| %>
        <%= f.select :amount, *[1..5], prompt: "個数選択" %>


        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>

        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      <% end %>

    </div>
  </div>

</div>