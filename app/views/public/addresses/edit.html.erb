<div class = "container">

  <div class = "row">
    <h4 class = "font-weight-bold mt-3 mb-4">配送先編集</h4>
  </div>

  <%= form_with model:@address,url: address_path(@address), local:true do |f| %>

    <div class = "row">
      <div class = "col-md-3"><%= f.label :postal_code, value: "郵便番号(ハイフンなし)" %></div>
      <div class = "col-md-6"><%= f.text_field :postal_code, :size=>"30" %></div>
    </div>

    <div class = "row my-3">
      <div class = "col-md-3"><%= f.label :address, value: "住所" %></div>
      <div class = "col-md-6"><%= f.text_field :address, :size=>"60" %></div>
    </div>

    <div class = "row">
      <div class = "col-md-3"><%= f.label :name, value: "宛名" %></div>
      <div class = "col-md-7"><%= f.text_field :name, :size=>"30" %></div>
      <div class = "col-md-2"><%= f.submit "変更内容を保存", class: "btn btn-success font-weight-bold" %></div>
    </div>


  <% end %>

</div>