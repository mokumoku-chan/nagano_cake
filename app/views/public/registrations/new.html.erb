<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    (姓)
    <%= f.text_field :last_name, autofocus: true %>

    (名)
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    (セイ)
    <%= f.text_field :last_name_kana, autofocus: true %>

    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true %>

    住所
    <%= f.text_field :address, autofocus: true %>

  </div>

  <div class="field">
    電話番号
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>


<strong>既に登録済みの方</strong>

<%= link_to "こちら", new_customer_session_path %> からログインしてください。