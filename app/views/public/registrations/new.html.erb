
<div class = "container my-2">
  <div class = "row">
    <h4 class = "font-weight-bold">新規会員登録</h4>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class = "row">
      <div class = "col-md-3">名前</div>
      <div class = "col-md-4">
        <%= f.label :last_name, value: "(姓)" %>
        <%= f.text_field :last_name, autofocus: true, :size=>"30" %>
      </div>
      <div class = "col-md-4">
        <%= f.label :first_name, value: "(名)" %>
        <%= f.text_field :first_name, autofocus: true, :size=>"30" %>
      </div>
    </div>


    <div class = "row">

      <div class="col-md-3">フリガナ</div>
      <div class = "col-md-4">
        <%= f.label :last_name_kana, value: "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, :size=>"30" %>
      </div>
      <div class = "col-md-4">
        <%= f.label :first_name_kana_name, value: "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, :size=>"30" %>
      </div>
    </div>


    <div class = "row">
      <div class="col-md-3"><%= f.label :email, value: "メールアドレス" %></div>
      <div class = "col-md-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
      </div>
    </div>


    <div class="row">
      <div class = "col-md-3"><%= f.label :postal_code, value: "郵便番号(ハイフンなし)" %></div>
      <div class = "col-md-4">
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-3"><%= f.label :registered_address, value: "住所" %></div>
      <div class = "col">
        <%= f.text_field :registered_address, autofocus: true %>
      </div>
    </div>


    <div class="row">
      <div class = "col-md-3"><%= f.label :telephone_number, value: "電話番号(ハイフンなし)" %></div>
      <div class = "col">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class = "col-md-3"><%= f.label :password, value: "パスワード(6文字以上)" %></div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="row">
      <div class= "col-md-3"><%= f.label :password_confirmation, value: "パスワード(確認用)" %></div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>


    <p class = "font-weight-bold">既に登録済みの方</p>

    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
</div>