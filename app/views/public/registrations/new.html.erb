
<div class = "container

my-2">
  <div class = "row">
    <h4 class = "font-weight-bold">新規会員登録</h4>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <div class = "row">
      <table class = "table table-borderless">
        <tr>
          <th>名前</th>
          <td><%= f.label :last_name, value: "(姓)" %></td>
          <td><%= f.text_field :last_name, autofocus: true, :size=>"30" %></td>
          <td><%= f.label :first_name, value: "(名)" %></td>
          <td><%= f.text_field :first_name, autofocus: true, :size=>"30"%></td>
        </tr>


        <tr>
          <th>フリガナ</th>
          <td><%= f.label :last_name_kana, value: "(セイ)" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, :size=>"30" %></td>
          <td><%= f.label :first_name_kana, value: "(メイ)" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, :size=>"30" %></td>
        </tr>


        <tr>
          <th><%= f.label :email, value: "メールアドレス" %></th>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %></td>
        </tr>


        <tr>
          <th><%= f.label :postal_code, value: "郵便番号(ハイフンなし)" %></th>
          <td></td>
          <td><%= f.text_field :postal_code, autofocus: true, :size=>"30" %></td>
        </tr>


        <tr>
          <th><%= f.label :registered_address, value: "住所" %></th>
          <td></td>
          <td colspan="3"><%= f.text_field :registered_address, autofocus: true, :size=>"80" %></td>
        </tr>


        <tr>
          <th><%= f.label :telephone_number, value: "電話番号(ハイフンなし)" %></th>
          <td></td>
          <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email", :size=>"30" %></td>
        </tr>


        <tr>
          <th><%= f.label :password, value: "パスワード(6文字以上)" %></th>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", :size=>"30" %></td>
        </tr>


        <tr>
          <th><%= f.label :password_confirmation, value: "パスワード(確認用)" %></th>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"30" %></td>
        </tr>


        <tr>
          <th></th>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>

      </table>
    </div>

  <% end %>


  <div class = "row">
    <p class = "font-weight-bold">既に登録済みの方</p>

    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>
</div>