<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class = "container">

  <div class = "row">
    <h4 class = "font-weight-bold">ジャンル一覧・追加</h4>
  </div>

  <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>

    <div class = "row py-5">
      <div class = "col-md-2 py-auto">
        <p>ジャンル名</p>
      </div>

      <div class = "col-md-4 py-auto">
        <%= f.text_field :name %>
      </div>

      <div class = "col-md-2  py-auto">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class = "row py-4">
    <div class = "col-5">
      <table class = "table">
        <thead class = "thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>

          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>