<div class = "container">

  <div class = "row">
    <div class = "col-3 py-4">
      <h4 class = "font-weight-bold">ジャンル編集</h4>
    </div>
  </div>

  <%= form_with model:@genre, url: admin_genre_path(@genre), local: true do |f| %>

  <div class = "row py-5">
    <div class = "col-md-2">
      ジャンル名
    </div>

    <div class = "col-md-4">
      <%= f.text_field :name %>
    </div>

    <div class = "col-md-2">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>


  </div>

  <% end %>

</div>