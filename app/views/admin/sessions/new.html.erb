
<div class = "container">

  <div class = "row">
    <h4 class = "font-weight-bold">管理者ログイン</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class = "row mx-auto">
    <div class = "col-md-3"><%= f.label :email, value: "メールアドレス" %></div>

    <div class = "col-md-9">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %>
      </div>
    </div>
  </div>

  <div class = "row mx-auto mt-3">
    <div class = "col-md-3"><%= f.label :password, value: "パスワード" %></div>

    <div class = "col-md-9">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", :size=>"50" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
    </div>
  </div>



    <div class = "row">
      <div class = "col-md-9 offset-md-3">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>