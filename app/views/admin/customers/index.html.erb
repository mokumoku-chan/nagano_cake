<div class = "container">

  <div class = "row">
    <h4 class = "font-weight-bold">会員一覧</h4>
  </div>

  <table class = "table my-4">
    <thead class = "thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_customer_name, admin_customer_path(customer), class: "text-dark" %></td>
        <td><%= customer.email %></td>

        <% if customer.is_active == true %>
          <td class = "text-success font-weight-bold">有効</td>
        <% else %>
          <td class = "text-secondary font-weight-bold">退会</td>
        <% end %>

      </tr>
    <% end %>
  </table>



  <%= paginate @customers %>


</div>