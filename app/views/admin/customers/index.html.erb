<div class = "container">

  <div class = "row mt-4">
    <h4>会員一覧</h4>
  </div>
  <table class = "table my-4">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>

    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer), class: "text-dark" %></td>
        <td><%= customer.email %></td>
        <td><%= Customer.is_actives %></td>

      </tr>
    </table>

  <% end %>

  <%= paginate @customers %>


</div>