<div class = "container py-4">

  <div class = "row">
    <h4 class = "bg-light">商品編集</h4>
  </div>

  <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>

    <table class = "table table-borderless">
      <tr>
        <td>商品画像</td>
        <td><%= f.attachment_field :image %></td>
      </tr>

      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction %></td>
      </tr>

      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
      </tr>

      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>

      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :is_active, :sale %>
          <%= Item.is_actives_i18n[:sale] %>

          <%= f.radio_button :is_active, :stop_selling, class: "ml-3" %>
          <%= Item.is_actives_i18n[:stop_selling] %>
        </td>
      </tr>

    </table>

  <div class = "row">
    <%= f.submit "変更を保存", class: "btn btn-success mx-auto" %>
  </div>

  <% end %>
</div>