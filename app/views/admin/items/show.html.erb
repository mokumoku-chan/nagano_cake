<h2>商品詳細</h2>

<% tax = 1.1 %>

<%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>

  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>

  <tr>
    <td>税込価格<br>(税抜価格)</td>
    <% include_tax = @item.price * tax %>
    <td><%= include_tax.floor.to_s(:delimited)%> (<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>

  <tr>
    <td>販売ステータス</td>
    <td><%= Item.is_actives_i18n[@item.is_active] %></td>
  </tr>
</table>


<%= link_to "編集する", edit_admin_item_path(@item) %>