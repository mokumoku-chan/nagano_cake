<div class = "container">

  <div class = "row">
    <h4>商品詳細</h4>
  </div>

  <% tax = 1.1 %>

  <div class = "row">
    <div class = "col-md-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <table class = "table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <% include_tax = @item.price * tax %>
          <td><%= include_tax.floor.to_s(:delimited)%> (<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>


          <td class = "text-success"><%= Item.is_actives_i18n[@item.is_active] %></td>
        </tr>
      </table>
    </div>
  </div>


  <div class = "row">
    <div class = "col-md-8 offset-md-4">
      <div class = "button"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></div>
    </div>
    </div>
</div>