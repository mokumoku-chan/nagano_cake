<div class = "container">

  <div class = "row">
    <div class = "col-md-3 py-3 float-left">
      <h4 class = "bg-light text-center">商品一覧</h4>
    </div>

    <div class = "col-md-1 py-3 ">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>


  <table class = "table mx-auto w-100">
    <thead class = "thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item), class: "text-dark" %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>

        <% if Item.is_actives[item.is_active] == true %>
          <td class = "text-success font-weight-bold"><%= Item.is_actives_i18n[item.is_active] %></td>
        <% else %>
          <td class = "text-secondary font-weight-bold"><%= Item.is_actives_i18n[item.is_active] %></td>
        <% end %>
      </tr>

    <% end %>

    <%= paginate @items %>
  </table>
</div>

